{
  "name": "scripts-launcher",
  "displayName": "Tasks Launcher",
  "description": "Status bar button to execute selected npm tasks and VSCode tasks from a dropdown menu",
  "version": "1.0.4",
  "publisher": "trystan4861",
  "author": "trystan4861",
  "license": "MIT",
  "icon": "icon.png",
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Other"
  ],
  "keywords": [
    "npm",
    "tasks",
    "task runner",
    "status bar",
    "terminal",
    "vscode tasks",
    "tasks.json"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "scriptsLauncher.selectTasks",
        "title": "Select npm Tasks"
      },
      {
        "command": "scriptsLauncher.selectVSCodeTasks",
        "title": "Select VSCode Tasks"
      },
      {
        "command": "scriptsLauncher.runTask",
        "title": "Run npm Task"
      },
      {
        "command": "scriptsLauncher.runVSCodeTask",
        "title": "Run VSCode Task"
      },
      {
        "command": "scriptsLauncher.showLastTaskLog",
        "title": "Show Last Task Log"
      }
    ],
    "configuration": {
      "title": "Tasks Launcher",
      "properties": {
        "scriptsLauncher.selectedTasks": {
          "type": "array",
          "default": [],
          "description": "List of selected npm tasks to show in the dropdown"
        },
        "scriptsLauncher.selectedVSCodeTasks": {
          "type": "array",
          "default": [],
          "description": "List of selected VSCode tasks to show in the dropdown"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js",
    "package": "vsce package",
    "publish": "vsce publish"
  },
  "devDependencies": {
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "16.x",
    "@types/vscode": "^1.74.0",
    "@typescript-eslint/eslint-plugin": "^5.45.0",
    "@typescript-eslint/parser": "^5.45.0",
    "@vscode/test-electron": "^2.2.0",
    "@vscode/vsce": "^2.15.0",
    "eslint": "^8.28.0",
    "glob": "^8.1.0",
    "mocha": "^10.1.0",
    "typescript": "^4.9.4"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/trystan4861/scripts-launcher.git"
  },
  "bugs": {
    "url": "https://github.com/trystan4861/scripts-launcher/issues"
  },
  "homepage": "https://github.com/trystan4861/scripts-launcher#readme"
}
